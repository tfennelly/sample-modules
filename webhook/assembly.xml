<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

    <id>module</id>

    <!--
        Produce a flat .zip file (without a base directory)...
    -->
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <!--
        Into the .zip file, include everything in the src/main/resources
        and src/main/foxweave folders...
    -->
    <fileSets>
        <fileSet>
            <directory>${basedir}/src/main/foxweave</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/resources</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
    </fileSets>

    <!--
        Put the component's own .jar file into the lib folder.
        This needs to be reflected in the foxweave-components.json 'deps' section...
    -->
    <files>
        <file>
            <source>target/foxweave-component-webhook-0.1.jar</source>
            <outputDirectory>/lib</outputDirectory>
        </file>
    </files>
</assembly>