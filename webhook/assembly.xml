    <id>module</id>

    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>${basedir}/src/main/foxweave</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/resources</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <source>target/foxweave-component-webhook-0.1.jar</source>
            <outputDirectory>/lib</outputDirectory>
        </file>
    </files>
</assembly>